<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lnProductStripe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:background="@drawable/custom_textbox"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.bit.sfa.DataControl.FinacFont
                    android:id="@+id/row_itemname"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/greenColor"
                    android:textSize="14sp"
                     />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="true"
                android:orientation="horizontal">

                <com.bit.sfa.DataControl.FinacFont
                    android:id="@+id/row_itemcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_weight="3.5"
                    android:gravity="left|center"
                    android:text="itemcode"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/greenColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.bit.sfa.DataControl.FinacFont
                    android:id="@+id/row_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="price"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/greenColor"
                    android:textSize="14sp"
                  />


                <com.bit.sfa.DataControl.FinacFont
                    android:id="@+id/row_discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="discount"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/greenColor"
                    android:textSize="14sp"
                    />


            </TableRow>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnSubtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:background="@drawable/icon_minus" />

            <TextView
                android:id="@+id/et_qty"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@drawable/custom_label"
                android:singleLine="true"
                android:gravity="center"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                android:textStyle="italic"></TextView>

            <ImageButton
                android:id="@+id/btnAddition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:background="@drawable/icon_plus" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>