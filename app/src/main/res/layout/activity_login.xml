<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.bit.sfa.view.ActivityLogin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#Fff"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:contentDescription="@string/app_name"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo" />

            <com.bit.sfa.utils.FinacFont
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:text="@string/amashi_distributors_pvt_ltd"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:typeface="monospace" />

        </LinearLayout>


        <com.bit.sfa.utils.FinacFont
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login"
            android:textSize="30sp" />

        <com.bit.sfa.utils.FinacText
            android:id="@+id/editusername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextstyle"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:hint="Username" />

        <com.bit.sfa.utils.FinacText
            android:id="@+id/editpassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edittextstyle"
            android:inputType="textPassword"
            android:padding="5dp"
            android:hint="Password" />

        <com.bit.sfa.utils.FinacFont
            android:id="@+id/textViewForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:text="@string/forgot_password"
            android:textSize="18sp" />

        <com.bit.sfa.utils.FinacBtn
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="60dp"
            android:text="Login" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:id="@+id/footer"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dm_logo" />

            <com.bit.sfa.utils.FinacFont
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:layout_height="wrap_content"
                android:text="@string/developed_by_rashmi" />
        </TableRow>
    </LinearLayout>
</LinearLayout>
