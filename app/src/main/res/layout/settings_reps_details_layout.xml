<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <Spinner
        android:id="@+id/sp_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sp_reps"
        android:layout_marginTop="16dp"
        android:text="User Name "
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_rep_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:id="@+id/et_rep_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_rep_username"
        android:layout_marginTop="18dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_rep_code"
        android:layout_alignBottom="@+id/et_rep_code"
        android:layout_alignParentLeft="true"
        android:text="Rep Code"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_rep_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_rep_code"
        android:layout_marginTop="18dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"></EditText>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_rep_prefix"
        android:layout_alignBottom="@+id/et_rep_prefix"
        android:layout_alignParentLeft="true"
        android:text="Prefix"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_rep_loc_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_rep_prefix"
        android:layout_below="@+id/et_rep_prefix"
        android:layout_marginTop="18dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_rep_loc_code"
        android:layout_alignBottom="@+id/et_rep_loc_code"
        android:layout_alignLeft="@+id/TextView03"
        android:text="Loc Code"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_rep_area_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_rep_loc_code"
        android:layout_below="@+id/et_rep_loc_code"
        android:layout_marginTop="18dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_rep_area_code"
        android:layout_alignBottom="@+id/et_rep_area_code"
        android:layout_alignLeft="@+id/TextView04"
        android:text="Area Code"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_rep_deal_code"
        android:layout_alignBottom="@+id/et_rep_deal_code"
        android:layout_alignLeft="@+id/TextView01"
        android:text="Deal Code"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_rep_deal_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_rep_area_code"
        android:layout_below="@+id/et_rep_area_code"
        android:layout_marginTop="18dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"></EditText>

</RelativeLayout>