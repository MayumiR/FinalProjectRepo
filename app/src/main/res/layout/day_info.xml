<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:gravity="right"
                android:text="Date"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:enabled="false"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:gravity="right"
                android:text="Start Time"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextStime"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:enabled="false"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="82dp"
                android:gravity="right"
                android:text="Vehicle"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextVehicle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:gravity="right"
                android:text="Driver"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextDriver"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="68dp"
                android:gravity="right"
                android:text="Assistant"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextAsst"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:gravity="right"
                android:text="Start Km"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextSkm"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="number"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:gravity="right"
                android:text="Route"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextRoute"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <Button
            android:id="@+id/buttonStart"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/dayEnd"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="68dp"
                android:gravity="right"
                android:text="End Time"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextEtime"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="79dp"
                android:gravity="right"
                android:text="End Km"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextEkm"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <com.bit.sfa.utils.FinacFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="72dp"
                android:gravity="right"
                android:text="Distance"
                android:textSize="18sp" />

            <com.bit.sfa.utils.FinacText
                android:id="@+id/editTextDistance"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/edittextstyle"
                android:inputType="textPersonName"
                android:padding="5dp" />
        </TableRow>

        <Button
            android:id="@+id/buttonEnd"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Finish" />



    </LinearLayout>
</LinearLayout>