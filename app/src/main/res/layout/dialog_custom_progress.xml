<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp" android:layout_height="90dp">

    <com.ceylonlinux.chelcey.salespad.libs.progress.ProgressWheel
        android:id="@+id/progress_dialog_progress_wheel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/progress_dialog_progress_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/progress_dialog_progress_wheel"
        android:layout_marginRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="Please wait..."
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textSize="17sp"/>

</RelativeLayout>
