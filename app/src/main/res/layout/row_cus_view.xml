<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="1">


                <ImageView
                    android:id="@+id/imageViewCus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:rotation="90"
                    app:srcCompat="@drawable/ic_image2" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <com.bit.sfa.utils.FinacFont
                        android:id="@+id/row_refno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="refno text" />

                    <com.bit.sfa.utils.FinacFont
                        android:id="@+id/row_cus_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="customer"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="italic" />

                    <com.bit.sfa.utils.FinacFont
                        android:id="@+id/addeddate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="TextView"
                        android:visibility="visible" />


                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/sts"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/status_line"></LinearLayout>


    </LinearLayout>


</LinearLayout>