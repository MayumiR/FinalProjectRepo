<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#000000" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="5dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#4682B4"
                android:endColor="#4682B4"
                android:angle="270"
                 />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="5dp" />
           
        </shape>
    </item>
</selector>